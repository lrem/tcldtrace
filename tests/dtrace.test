# probe_desc callback {{{

test "process-2.1" "fire the BEGIN probe" -constraints {tracePrivs} -setup {
	set h [::dtrace::open -foldpdesc 1]
	set p [::dtrace::compile $h {:::BEGIN}]	
	::dtrace::exec $p
	proc cb_probe_desc {probe cpu id args} {
		set ::result $probe
	}
	::dtrace::go $h probe_desc {cb_probe_desc {}}
	set ::result 0
} -body {
	::dtrace::process $h 1
	set ::result
} -cleanup {
	::dtrace::close $h
} -result {dtrace:::BEGIN}


