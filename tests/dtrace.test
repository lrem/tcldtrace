package require dtrace

testConstraint tcl85 [package vsatisfies [package present Tcl] 8.5]
testConstraint tracePrivs [expr {
	!([catch {::dtrace::close [::dtrace::open]} msg] &&
	[string match {*requires additional privileges} $msg])}]

