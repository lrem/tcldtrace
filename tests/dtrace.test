# ::dtrace::aggregations {{{

test "aggregations-2.1" "aggregations" -constraints {tracePrivs} -setup {
	set h [::dtrace::open]
	set p [::dtrace::compile $h {
		:::BEGIN
		{
			@agg1["fooshmoo"] = avg(1);
			@agg2["bar", "baz"] = sum(1);

			@agg1["fooshmoo"] = avg(5);
			@agg2["bar", "baz"] = sum(1);
			@agg3["bar", "baz", "bam"] = sum(1);
		}
	} ]	
	::dtrace::exec $p
	::dtrace::go $h 
	::dtrace::process $h 1
} -body {
	::dtrace::aggregations $h
} -cleanup {
	::dtrace::close $h
} -result {fooshmoo 3 {bar baz} 2 {bar baz bam} 1}

